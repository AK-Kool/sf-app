{
   "tabWidth": 4,
   "singleQuote": true,
   "trailingComma": "none",
   "printWidth": 150,
   "semi": true,
   "plugins": ["prettier-plugin-apex", "@prettier/plugin-xml"],
   "overrides": [
      {
        "files": "**/lwc/**/*.html",
        "options": { "parser": "lwc"}
      },
      {
        "files": "*.{cmp,page,component}",
        "options": { "parser": "html"}
      }
   ]
}